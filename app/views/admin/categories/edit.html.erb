<h1 class="text-center">Update Category</h1>
<div class="row">
  <div class="col-md-6 offset-3">
    <%= form_for([:admin, @categories]) do |f| %>
      <%= f.label "Name" %>
      <%= f.text_field :name, class: 'form-control' %>
      <%= f.submit "Update", class: "btn btn-primary mb-5 mt-2" %>
    <% end %>
  </div>
</div>